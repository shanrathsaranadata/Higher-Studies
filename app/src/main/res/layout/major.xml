<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    android:background="@android:color/white"
    app:cardElevation="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/majorrlt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/major_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/todo" />


        <TextView
            android:id="@+id/major_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/major_image"
            android:textColor="@color/maincolour"
            android:paddingLeft="30dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/major_universityname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/major_name"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>