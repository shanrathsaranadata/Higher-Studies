<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    android:background="@android:color/white"
    app:cardElevation="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/universityrlt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/university_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/todo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_univercitys"
            android:layout_below="@+id/university_image"
            android:contentDescription="TODO" />


        <TextView
            android:id="@+id/university_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/university_image"
            android:textColor="@color/black"
            android:paddingLeft="30dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/university_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/university_name"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rating"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/university_name"
            android:contentDescription="TODO" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rating"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/university_name"
            android:paddingLeft="30dp"
            android:contentDescription="TODO" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rating"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/university_name"
            android:paddingLeft="60dp"
            android:contentDescription="TODO" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rating"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/university_name"
            android:paddingLeft="90dp"
            android:contentDescription="TODO" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rating"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/university_name"
            android:paddingLeft="120dp"
            android:contentDescription="TODO" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>